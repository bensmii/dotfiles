# Homebrew configuration (usually at the top)
# This is typically added by Homebrew itself
# and should be loaded first to ensure all Homebrew-installed commands are available.
# It should look something like this:
# eval "$(/opt/homebrew/bin/brew shellenv)"

# Starship Prompt - should be initialized early
eval "$(starship init zsh)"

# zsh-syntax-highlighting
# We set the highlighters directory and then source the plugin
export ZSH_HIGHLIGHT_HIGHLIGHTERS_DIR=/opt/homebrew/share/zsh-syntax-highlighting/highlighters
source /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# fzf - key bindings should be loaded last to prevent conflicts with other plugins
source <(fzf --zsh)
source ~/fzf-git.sh/fzf-git.sh

# eza (better ls)
alias ls="eza --color=always --long --git --icons=always --no-time --no-user"

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
